# Frontend Environment Configuration Example
# 复制本文件为 .env.development 或 .env.production 并填入实际值

# API 后端地址
VITE_API_BASE_URL=http://127.0.0.1:8001
VITE_API_TIMEOUT=30000

# WebSocket 连接地址
VITE_WS_URL=ws://127.0.0.1:8001/ws
VITE_WS_HEARTBEAT_INTERVAL=30000

# 应用环境
VITE_APP_ENV=development
VITE_APP_DEBUG=true

# 认证相关
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_TOKEN_EXPIRY_WARNING_MINUTES=5

# 监控与分析（可选）
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=

# UI 配置
VITE_PAGE_SIZE_DEFAULT=20
VITE_REQUEST_RETRY_TIMES=3
VITE_REQUEST_RETRY_DELAY=1000

# 特性开关
VITE_FEATURE_DAG_PIPELINE=true
VITE_FEATURE_AI_DEMO=true
VITE_FEATURE_RBAC=true
