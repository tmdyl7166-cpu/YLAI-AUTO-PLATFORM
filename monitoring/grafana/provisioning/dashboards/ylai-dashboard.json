{
  "dashboard": {
    "id": null,
    "title": "YLAI Auto Platform - 系统监控面板",
    "tags": ["ylai", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API请求统计",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ylai_api_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "API响应时间",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ylai_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ylai_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "系统资源使用",
        "type": "graph",
        "targets": [
          {
            "expr": "ylai_system_cpu_usage_percent",
            "legendFormat": "CPU使用率",
            "refId": "A"
          },
          {
            "expr": "ylai_system_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "内存使用(MB)",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "缓存性能",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ylai_cache_hits_total[5m])",
            "legendFormat": "缓存命中",
            "refId": "A"
          },
          {
            "expr": "rate(ylai_cache_misses_total[5m])",
            "legendFormat": "缓存未命中",
            "refId": "B"
          },
          {
            "expr": "ylai_cache_size",
            "legendFormat": "缓存大小",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "业务指标",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ylai_pipeline_runs_total[5m])",
            "legendFormat": "流水线运行",
            "refId": "A"
          },
          {
            "expr": "rate(ylai_phone_analysis_total[5m])",
            "legendFormat": "号码分析",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "服务健康状态",
        "type": "table",
        "targets": [
          {
            "expr": "ylai_service_health",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "应用运行时间",
        "type": "singlestat",
        "targets": [
          {
            "expr": "ylai_app_uptime_seconds",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "系统状态",
        "type": "statusmap",
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}